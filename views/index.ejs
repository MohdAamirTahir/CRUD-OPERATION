<%- include('./partials/header.ejs')%>
<div class="container">
    <div class="row">
        <div class="col-sm-6 mt-5">
            <h2 class="alert alert-success text-cnter">Add New Student</h2>
            <form method="post" action="submit">
                <div class="mb-3">
                  <label for="name" class="form-label">Name</label>
                  <input type="text" class="form-control" name="name" id="name" aria-describedby="emailHelp" placeholder="Please Enter Your Name">
                </div>
                <div class="mb-3">
                  <label for="age" class="form-label">Age</label>
                  <input type="text" class="form-control" name="age" id="age" placeholder="Please Enter Your Age">
                </div>
                <div class="mb-3">
                  <label for="fees" class="form-label">Fees</label>
                  <input type="text" class="form-control" name="fees" id="fees" placeholder="Please Enter Your Fees">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
        </div>
        <div class="col-sm-6 mt-5">
            <h2  class="alert alert-danger text-cnter">List of Student</h2>
            <%# Show All Data%>
            <table class="table table-striped table-hover">
                    <thead>
                      <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Age</th>
                        <th scope="col">Fees</th>
                        <th scope="col">Action</th>
                      </tr>
                    </thead>
                    <tbody>
                        <% var i=1%>
                        <% data.forEach(function(item) { %>
                            <tr>
                                <td><%= i++%></th>
                                <td><%= item.name %></td>
                                <td><%= item.age %></td>
                                <td><%= item.fees %></td>
                                <td>
                                    <form action="/edit/<%= item._id%>" method="get" class="d-inline">
                                        <button type="submit" class="btn">
                                            <i class="fas fa-pen-square text-info"></i>
                                        </button>
                                    </form>
                                    <form action="/delete/<%= item._id%>" method="post" class="d-inline">
                                        <button type="submit" class="btn">
                                            <i class="fas fa-trash text-danger"></i>
                                        </button>
                                    </form>
                                </td>
                              </tr>
                              <% }); %>          
                   </tbody>
              </table>
        </div>
    </div>
</div>

<%- include('./partials/footer.ejs')%>

 